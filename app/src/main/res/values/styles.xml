<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlaceViewHolderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginTop">@dimen/base_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MainHolderText" parent="PlaceViewHolderText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/result_name_text</item>
    </style>

    <style name="DescriptionHolderText" parent="PlaceViewHolderText">
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:textSize">@dimen/description_text</item>
    </style>
</resources>
